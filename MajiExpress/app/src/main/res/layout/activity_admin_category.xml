<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"

        />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/tshirts"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/sports_t_shirts"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/sports"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/dresses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/female_dresses"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/sweaters"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/sweather"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/glasses"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/purses_bags"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/purses_bags"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/shoess"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/hats"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/hats"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp">

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/glasses"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/purses_bags"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/purses_bags"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/shoess"
            />

        <androidx.appcompat.widget.AppCompatImageView

            android:id="@+id/hats"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src = "@drawable/hats"
            />



    </androidx.appcompat.widget.LinearLayoutCompat>







</RelativeLayout>